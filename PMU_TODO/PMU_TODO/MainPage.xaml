                    AlignItems="Center"
                    >
            <CheckBox Color="#5700F7" WidthRequest="64"></CheckBox>
            <Label TextColor="#5700F7" Text="Диалоги тет а тет до утра за жили были от нее секретов нет избавляемся от пыли я дышу ее душой она дышит моим сердцем"></Label>
        </FlexLayout>
        <CollectionView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <FlexLayout Direction="Row">
                        <CheckBox></CheckBox>
                        <Label Text="LOL"></Label>
                    </FlexLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry PlaceholderColor="#5700F7">
            
        </Entry>
    </StackLayout>

</ContentPage>
